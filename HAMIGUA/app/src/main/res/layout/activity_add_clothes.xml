<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".wardrobe.cloth.AddClothes">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clothImageView"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
                tools:layout_editor_absoluteY="110dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:hint="衣服名稱"
                android:textColor="#000"
                android:textColorHint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clothImageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinnerClothesCategory"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_back"
                android:visibility="visible"/>

            <Spinner
                android:id="@+id/spinnerAccessoriesCategory"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_back"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:hint="#Hashtag_1"
                android:textColor="#000"
                android:textColorHint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clothImageHashtag1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:hint="#Hashtag_2"
                android:textColor="#000"
                android:textColorHint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clothImageHashtag2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:hint="#Hashtag_3"
                android:textColor="#000"
                android:textColorHint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clothImageHashtag3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:hint="color_H"
                android:textColor="#000"
                android:textColorHint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clothImageH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:hint="color_S"
                android:textColor="#000"
                android:textColorHint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clothImageS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:hint="color_V"
                android:textColor="#000"
                android:textColorHint="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/clothImageV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinnerClothesLength"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_back"/>

            <Spinner
                android:id="@+id/spinnerClothesWidth"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_back"/>



            <Button
                android:id="@+id/btn_UploadClothes"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_style_blue"
                android:text="上傳衣服"
                android:textColor="#fff"
                android:textSize="16dp"
                app:backgroundTint="#257DC3" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="#80FFFF"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"/>

   -->

</LinearLayout>